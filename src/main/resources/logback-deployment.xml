<configuration>
	<appender name="FILE" class="ch.qos.logback.core.FileAppender"><!-- TODO: Rolling the file. -->
		<file>alcomeasure-service.log</file>
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="FILE"/>
	</root>
</configuration>
