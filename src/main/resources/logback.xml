	<!-- Toggleable debug console appender, used if consoleDebug = true in settings.properties -->
	<appender name="DEBUGCONSOLE" class="au.com.touchsafe.alcomeasure.util.logging.ConfigurableConsoleAppender">
		<encoder>
			<pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="DEBUG">
		<!--<appender-ref ref="STDOUT"/>-->
		<appender-ref ref="TEST"/>
		<appender-ref ref="DEBUGCONSOLE"/>
	</root>
</configuration>
